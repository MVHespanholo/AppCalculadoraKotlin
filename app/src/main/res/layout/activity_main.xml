<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="10"
    android:background="#000454">

    <!-- Display ocupará 3/10 da altura da tela -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/displayEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AFAFAF"
            android:gravity="end|bottom"
            android:padding="16dp"
            android:textSize="48sp"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Grid de botões ocupará 7/10 da altura da tela -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- Linha 1 - Botões de função -->
        <Button
            android:id="@+id/btnClear"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#FF5252"
            android:textSize="24sp"
            android:text="C" />

        <Button
            android:id="@+id/btnParentheses"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#4A90E2"
            android:textSize="24sp"
            android:text="( )" />

        <Button
            android:id="@+id/btnPercent"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#4A90E2"
            android:textSize="24sp"
            android:text="%" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#FF5252"
            android:textSize="24sp"
            android:text="⌫" />

        <!-- Linha 2 - Números e operadores -->
        <Button
            android:id="@+id/btn7"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="9" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#4A90E2"
            android:textSize="24sp"
            android:text="÷" />

        <!-- Linha 3 -->
        <Button
            android:id="@+id/btn4"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="6" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#4A90E2"
            android:textSize="24sp"
            android:text="×" />

        <!-- Linha 4 -->
        <Button
            android:id="@+id/btn1"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="3" />

        <Button
            android:id="@+id/btnSubtract"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#4A90E2"
            android:textSize="24sp"
            android:text="-" />

        <!-- Linha 5 -->
        <Button
            android:id="@+id/btn0"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textSize="24sp"
            android:text="." />

        <Button
            android:id="@+id/btnEquals"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#43A047"
            android:textSize="24sp"
            android:text="=" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/OperatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#4A90E2"
            android:textSize="24sp"
            android:text="+" />



    </GridLayout>

</LinearLayout>